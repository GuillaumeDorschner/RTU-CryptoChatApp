{
  "compilerOptions": {
    "types": ["jest"],
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "exclude": ["node_modules"]
}
